page{
  background-color: rgb(243, 244, 249)
}

/* The green background image */
.background{
  width: 100%;
  height: 320rpx;
  z-index: -1;
  position: fixed; 
  background-size: 100% 100%;
}

/* The user information part */
.user{
  width: 700rpx;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
  position: absolute;
  margin-top: 80rpx;
  margin-left: 25rpx;
  box-shadow: 0 0 10rpx 3rpx rgb(230, 227, 227);
}
.userInfo{
  display: flex;
  flex-direction: row;
}
.profile{
  height: 100rpx;
  width: 100rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
}
.username{
  margin-top: 30rpx;
  margin-left: 40rpx;
  color: black;
}
.usernum{
  margin-top: 45rpx;
  margin-left: -110rpx;
  color: grey;
  font-size: 28rpx;
}

/* The four icon under the name */
.iconTotal{
  display: flex;
  flex-direction: row;
  margin-left: 60rpx;
}
.iconImg{
  height: 80rpx;
  width: 80rpx;
}
.iconName{
  color: black;
  font-size: 30rpx;
  margin-left: 16rpx;
}
.icon{
  margin-top: 20rpx;
  margin-left: 60rpx;
}

/* The send box under the user info */
.send{
  width: 700rpx;
  height: 500rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
  position: absolute;
  margin-top: 420rpx;
  margin-left: 25rpx;
  box-shadow: 0 0 10rpx 3rpx rgb(232, 233, 239);
}
.sendbox{
   height: 70rpx;
 }
.input{
  border: 1px solid  #ccc;
  padding: 5px;
