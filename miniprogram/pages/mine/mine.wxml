<!-- the green background image -->
<image class="background" src="{{greenBack}}"></image>

<!-- The top part of the page -->
<view class="user">
  <!-- The user information -->
  <view class="userInfo">
    <image class="profile" src="{{profilePic}}"></image>
    <text class="username">{{username}}</text>
    <text class="usernum">\n{{beforeNum}}{{userNum}}</text>
  </view>
  <!-- The four icons under the username -->
  <view class="iconTotal">
    <view class="icon" wx:key="key" wx:for="{{icon}}">
      <image class="iconImg" src="{{item.img}}" bindtap="notOpen"></image>
      <view class="iconName" bindtap="notOpen">{{item.name}}</view>
    </view>
  </view>
</view>

<!-- The message board below -->
<view class="send">
  <view class="sendbox">
    <input bindinput="changeInputValue" class="input" type="text" value="{{inputVal}}" placeholder="请输入留言" placeholder-class="place-input" />
    <button class="button" type="primary" bindtap="addMsg">
      <view class="sent">{{sent}}</view>
    </button>
  </view>
</view>