<image class="background" src="{{greenBack}}"></image>
<view class='container'>
  <view class="head">
    <view class="nametot">
      <image class="pic" src="{{avatar}}"></image>
      <text class='name'>{{name}}</text>
    </view>
    <view class="iconTotal">
    <view class="icon" wx:key="key" wx:for="{{icon}}">
      <image class="iconImg" src="{{item.img}}" bindtap="{{item.functionName}}"></image>
      <view class="iconName" bindtap="{{item.functionName}}">{{item.name}}</view>
    </view>
  </view>

    </view>
</view>


<!-- form -->
<view wx:if="{{!manager}}" class="headbelow">
  <view class="send-box">
    <input bindinput="changeInputValue" class="input" type="text" value="{{inputVal}}" placeholder="请输入留言" placeholder-class="place-input" />
    <button class="but" type="primary" bindtap="addMsg">
      <view class="text1">发送</view>
    </button>
  </view>
</view>


<!-- manager version -->
<view wx:if="{{manager}}" class='manager'>
  <view class='managerControl'>
    <button type="primary">管理员版本 </button>
  </view>


  <view class='individualContainer'>
    <view class='infoTitle'>查询菜品</view>
    <form bindsubmit='searchDish'>
      <view class="modifyDishInfo infoContainer">
        <input name='searchDishName' class='managerInput' placeholder='输入菜品名' value='{{cleanName}}'></input>
        <view class='buttonComb1'>
          <button type='primary' class='managerButton1' formType="submit">点击查询</button>
        </view>
      </view>
    </form>
  </view>

  <view class='individualContainer'>
    <view class='infoTitle'>添加新品</view>
    <form bindsubmit='createNewDish'>
      <view class='addNewDish infoContainer'>
        <input name='newName' class='managerInput' placeholder='新品名称' value='{{cleanName}}'></input>
        <input name='newPrice' class='managerInput' placeholder='新品价格¥' value='{{cleanName}}'></input>
        <input name='newMaterial' class='managerInput' placeholder='原材料' value='{{cleanName}}'></input>

       <!-- choose category  -->
        <radio-group name="category">
      <label wx:key="key" wx:for='{{ dishCategory}}' class='categoryLabel'><radio value='{{item}}' checked='{{ifCheck}}'/>{{item}}</label>
    </radio-group>

        <button wx:if="{{!ifDishPhoto}}" class='uploadPhoto' bindtap='doUploadDishPhoto'>上传图片</button>
        <image wx:else src='{{newFileID}}' class='dishImage'> </image>
        <view class='buttonComb1'>
          <button form-type='submit' type='primary' class='managerButton1'>点击添加</button>
        </view>
      </view>
    </form>
  </view>

  <view class='individualContainer'>
    <view class='infoTitle'>添加轮播图片</view>
    <form bindsubmit='addNewSwiperPhoto'>
      <view class='addNewPoster infoContainer'>
        <input name='newSwiperDiscription' class='managerInput' placeholder='图片描述' value='{{cleanName}}'></input>
        <button wx:if='{{!ifSwiperPhoto}}' class='uploadPhoto' bindtap='doUploadSwiperPhoto'>上传图片</button>
        <image wx:else src='{{newSwiperID}}' class='dishImage'> </image>
        <view class='buttonComb1'>
          <button form-type='submit' type='primary' class='managerButton1'>点击添加</button>
        </view>
      </view>

  </form>
</view>
</view>