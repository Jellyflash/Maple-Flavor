<!-- The swiper on the top with three slides. -->
<swiper class='swiper' indicator-dots='true' autoplay='true' interval='5000' duration='1000' circular='true'>
  <block wx:for="{{swiperUrl}}" wx:for-index="index" wx:key="key">
    <swiper-item>
      <image src='{{item}}' class='slide'                         mode='aspectFill'></image>
    </swiper-item>
  </block>
</swiper>

<!-- The orange title for new arrival -->
<view class="titleBack">
  <view class="title">新品上市</view>
  <image class="newArrivalImg" src="{{newArrival}}"></image>
</view>

<!-- The information of the new arrived food  -->
<view wx:for="{{menu}}" wx:key="key">
<view class="card" id="{{item._id}}" bindtap='go'>
  <image class="foodImg" src="{{item.dish_photoID}}"></image>
  <view>
    <view class="foodTitle">{{item.dish_name}}</view>
    <view class="foodInfo">{{item.dish_category}}</view>
    <view class="price">{{item.dish_price}}</view>
  </view>
  <image class="arrow" src="{{arrow}}"></image>
</view>
</view>
