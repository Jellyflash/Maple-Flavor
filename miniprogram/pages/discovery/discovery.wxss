/* The swiper on the top with three slides. */
.swiper {
  width: 100%;
  height: 330rpx;
  display: block;
  position: relative;
  top: 0rpx;
  background: #f0f0f0;
}
.slide {
  width: 100%;
  height: inherit;
}

/* The orange title for new arrival */
.titleBack{
  margin-top: 55rpx;
  background-color: #51ce0e;
  height: 80rpx;
  width: 430rpx;
  margin-left: 165rpx;
  border-radius: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: rgb(54, 175, 97) 5px 5px 10px 0px;
}

.title{
  font-size: 45rpx;
  color: #FFFFFF;
}

.newArrivalImg{
  height: 70rpx;
  width: 70rpx;
  margin-left: 10rpx;
}

/* The information of the new arrived food */
.card{
  display: flex;
  flex-direction: row;
  box-shadow: 5rpx 5rpx 0rpx 4rpx #eee;
  width: 700rpx;
  height: 220rpx;
  margin-top: 40rpx;
  border-radius: 20rpx;
  margin-left: 25rpx;
}

.foodImg{
  width: 204.8rpx;
  height: 160rpx;
  margin-left: 60rpx;
  margin-top: 30rpx;
}

.foodTitle{
  font-size: 40rpx;
  position: absolute;
  color: #000000;
  margin-top: 30rpx;
  margin-left: 50rpx;
}

.foodInfo{
  color:grey;
  font-size: 30rpx;
  margin-top: 90rpx;
  margin-left: 50rpx;
}

.price{
  color: #FF7F00;
  font-size: 35rpx;
  margin-top: 15rpx;
  margin-left: 50rpx;
}

.arrow{
  position: absolute;
  height: 80rpx;
  width: 80rpx;
  margin-top: 60rpx;
  margin-left: 600rpx;
}

