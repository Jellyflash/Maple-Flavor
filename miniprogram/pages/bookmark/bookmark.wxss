.card{
  display: flex;
  flex-direction: row;
  box-shadow: 5rpx 5rpx 0rpx 4rpx #eee;
  width: 700rpx;
  height: 220rpx;
  margin-top: 40rpx;
  border-radius: 20rpx;
  margin-left: 25rpx;
}

.foodImg{
  width: 204.8rpx;
  height: 160rpx;
  margin-left: 60rpx;
  margin-top: 30rpx;
}

.foodTitle{
  font-size: 40rpx;
  position: absolute;
  color: #000000;
  margin-top: 30rpx;
  margin-left: 50rpx;
}

.foodInfo{
  color:#DDDDDD;
  font-size: 30rpx;
  margin-top: 90rpx;
  margin-left: 50rpx;
}

.price{
  color: #FF7F00;
  font-size: 35rpx;
  margin-top: 15rpx;
  margin-left: 50rpx;
}

.arrow{
  position: absolute;
  height: 80rpx;
  width: 80rpx;
  margin-top: 60rpx;
  margin-left: 600rpx;
}